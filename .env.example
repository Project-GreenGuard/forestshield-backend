# ForestShield Backend Environment Configuration
# Copy this file to .env and update with your values

# Docker Compose Environment Variables
# These are used for local development with DynamoDB Local

# Flask Environment
FLASK_ENV=development

# DynamoDB Local Configuration
# These values are only used when connecting to DynamoDB Local
# For AWS production, these are not needed (uses IAM roles)
AWS_ENDPOINT_URL=http://dynamodb:8000
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# AWS Region (for local development)
AWS_REGION=us-east-1
